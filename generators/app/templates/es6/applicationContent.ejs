
initialize() {
  // create a GraphComponent
  let graphComponent = new yfiles.view.GraphComponent('graphComponent');

  // create and configure a default node style
  graphComponent.graph.nodeDefaults.style = new yfiles.styles.ShinyPlateNodeStyle({
    fill: yfiles.view.Fill.ORANGE,
    drawShadow: true
  });

  // get the IGraph
  let graph = graphComponent.graph;
  // create some nodes
  let node1 = graph.createNode(new yfiles.geometry.Rect(50, 50, 30, 30));
  let node2 = graph.createNode();

  // create an edge
  graph.createEdge(node1, node2);

  // create an input mode
  graphComponent.inputMode = new yfiles.input.GraphEditorInputMode();
}

constructor() {
  this.initialize();
}
